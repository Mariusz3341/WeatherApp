@page
@model WeatherApp.Pages.City.EditModel
@{
}

<div class="row justify-content-md-center my-4">
    <div class="col-md-4 card p-4">
        <h1 class="text-center">Edit</h1>

        <form method="post">

            <input asp-for="cityWeatherToEdit.Id" type="hidden" />
            <input asp-for="cityWeatherToEdit.LastUpdate" type="hidden" />
            <div class="form-group mb-2 ">
                <label for="cityName">City name</label>
                <input id="cityName" asp-for="cityWeatherToEdit.CityName" class="form-control" />
                <span asp-validation-for="cityWeatherToEdit.CityName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="country">Country</label>
                <input id="country" asp-for="cityWeatherToEdit.Country" class="form-control" />
                <span asp-validation-for="cityWeatherToEdit.Country" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="temp_C">Temp_C</label>
                <input id="temp_C" asp-for="cityWeatherToEdit.Temp_C" class="form-control" />
                <span asp-validation-for="cityWeatherToEdit.Temp_C" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="temp_F">Temp_F</label>
                <input id="temp_F" asp-for="cityWeatherToEdit.Temp_F" class="form-control" />
                <span asp-validation-for="cityWeatherToEdit.Temp_F" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label for="info">Info</label>
                <input id="info" asp-for="cityWeatherToEdit.Info" class="form-control" />
                <span asp-validation-for="cityWeatherToEdit.Info" class="text-danger"></span>
            </div>
            <div class="row justify-content-around">
                <div class="col-4">
                    @(Html.Kendo().Button()
                        .Name("editButton")
                        .HtmlAttributes(new { type = "submit" })
                        .Content("Confirm")
                        .ThemeColor(ThemeColor.Primary)
                        )
                </div>
                <div class="col-4">
                    @(Html.Kendo().Button()
                        .Name("backtButton")
                        .HtmlAttributes(new { onclick = "window.location.href='/';" })
                        .Content("Home page")
                        .ThemeColor(ThemeColor.Info)
                        )
                </div>
            </div>
        </form>

    </div>
</div>